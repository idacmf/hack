<% provide(:title, baseteam_title('Add team')) %>

<h1>Add a team</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@team) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :team_name %>
        <%= f.text_field :team_name, class: 'form-control' %>

        <%= f.label :team_contact_name, "Name of contact person" %>
        <%= f.text_field :team_contact_name, class: 'form-control' %>

        <%= f.label :team_phone_nr, "Phone number of contact person" %>
        <%= f.telephone_field :team_phone_nr, class: 'form-control' %>

        <%= f.label :user_id, "Automatically generated user id." %>
        <%= f.hidden_field :user_id, value: 1 %>

        <%= f.submit "Create team", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
