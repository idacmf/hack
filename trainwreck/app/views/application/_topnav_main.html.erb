<div class="row" id="topnav-container">
  <div id="topnav_logo" class="col-xs-3">
    <%= link_to("TrainWreck", root_path) %>
  </div>
  <% if !user_signed_in? %>
      <div id="topnav" class="col-xs-9">
        <div id="topnav_navigation" class="col-xs-2 active">
          <%= link_to("Sign Up", new_user_registration_path) %>
        </div>
        <div id="topnav_navigation" class="col-xs-2">
          <%=link_to "Home", root_path%>
        </div>
        <div id="topnav_navigation" class="col-xs-2">
          <%= link_to 'Filler', root_path %>
        </div>
        <div id="search_bar" class="col-xs-4">
          <%= form_tag("/search", method: "get") do %>
              <%= image_tag("search-glass.png"); %>
              <%= text_field_tag(:search) %>
              <%= submit_tag("") %>
          <% end %>
        </div>
        <div id="topnav_navigation" class="col-xs-2">
          <%=link_to "FAQ", root_path%>
        </div>
      </div>
  <% else %>
      <div id="topnav" class="col-xs-9">
        <div id="topnav_navigation" class="col-xs-2 active">
          <%=link_to "Home", root_path%>
        </div>
        <div id="topnav_navigation" class="col-xs-2">
          <%= link_to 'All', tournaments_path, {:controller => 'tournaments', :action => 'index'} %>
        </div>
        <div id="topnav_navigation_spacer" class="col-xs-1">
        </div>
        <div id="topnav_navigation" class="col-xs-1">
          <%= link_to (notifications_path) do %>
              <%= image_tag("icon_notification.gif") %>
          <% end %>
        </div>
        <div id="search_bar" class="col-xs-4">
          <%= form_tag("/search", method: "get") do %>
              <%= image_tag("search-glass.png"); %>
              <%= text_field_tag(:search) %>
              <%= submit_tag("") %>
          <% end %>
        </div>
        <div id="topnav_navigation" class="col-xs-2">
          <%=link_to "FAQ", root_path%>
        </div>
      </div>
  <% end %>
</div>